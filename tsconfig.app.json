{
  "compilerOptions": {
    /* Language & runtime */
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "useDefineForClassFields": true,

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",

    /* React */
    "jsx": "react-jsx",

    /* Build behavior */
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting / strictness (relaxed, per your request) */
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "strictNullChecks": false,

    /* Tooling */
    "skipLibCheck": true,

    /* Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  /* ðŸš¨ CRITICAL for unopened files */
  "include": [
    "src/**/*",
    "tailwind.config.ts",
    "postcss.config.*"
  ],
  "exclude": ["node_modules"]
}
